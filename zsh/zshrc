# user setting
if [ -e ${HOME}/.setting ]; then
        source ${HOME}/.setting
fi

source $HOME/.slimzsh/slim.zsh

for config_file (${ZDOTDIR:-$HOME}/.zsh/zsh.d/*.zsh(N)) source $config_file

stty -ixon

unsetopt correct_all

# use cat
bindkey "^[[1;2D" backward-word
bindkey "^[[1;2C" forward-word 
bindkey "^[[1;2A" beginning-of-line
bindkey "^[[1;2B" end-of-line
bindkey "Î©" undo
bindkey "^[[A" up-line-or-history
bindkey "^[[B" down-line-or-history
bindkey "^H" backward-kill-word

export BAT_CONFIG_PATH=$HOME/.batconfig
export HISFILE=$HOME/.zsh_history

source $HOME/.zplug/init.zsh

source $HOME/.zsh/zsh-autosuggestions/zsh-autosuggestions.zsh

source $HOME/.zsh/zsh-autoenv/autoenv.zsh
zplug "Tarrasch/zsh-autoenv"

